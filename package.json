{
    "name": "myriskscap",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/xsenv": "^3.1.1",
        "@sap/xssec": "^3.2.11",
        "express": "^4",
        "hdb": "^0.18.3",
        "passport": "^0.5.2",
        "@sap/hana-client": "2.11.14"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.2.3",
        "@sap/ux-specification": "^1.96.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "undeploy": "cf undeploy myriskscap --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "sql"
            },
            "uaa": {
                "kind": "xsuaa",
                "credentials": {}
            },
            "auth": {
                "[development]": {
                    "kind": "basic-auth",
                    "users": {
                        "manshu": {
                            "password": "minitial",
                            "roles": [
                                "RiskViewer"
                            ]
                        },
                        "divansh": {
                            "password": "dinitial",
                            "roles": [
                                "RiskManager"
                            ]
                        }
                    }
                },
                "[production]": {
                    "kind": "jwt-auth"
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/risks"
    ]
}